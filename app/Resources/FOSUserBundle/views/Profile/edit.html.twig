{% extends "FOSUserBundle::layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% set content_title = 'Edit Profile' %}

{% block fos_user_content %}
    <div class="col-sm-6 col-sm-offset-3">
        <form action="{{ path('fos_user_profile_edit') }}" method="POST">
            {% if not form.vars.valid %}
                <div class="alert alert-danger">
                    {{ form_errors(form.username) }}
                    {{ form_errors(form.email) }}
                    {{ form_errors(form.current_password) }}
                </div>
            {% endif %}
            <div class="form-group">
                <label class="control-label" for="fos_user_profile_form_firstName">
                    First Name
                </label>
                <div class="col-xs-12">
                    {{ form_widget(form.firstName, {'attr': {'class': 'form-control', 'placeholder': 'First Name'}}) }}
                </div>
            </div>
            <div class="form-group">
                <label class="control-label" for="fos_user_profile_form_lastName">
                    Last Name
                </label>
                <div class="col-xs-12">
                    {{ form_widget(form.lastName, {'attr': {'class': 'form-control', 'placeholder': 'Last Name'}}) }}
                </div>
            </div>
            <div class="form-group">
                <label class="control-label" for="fos_user_profile_form_username">
                    {{ 'form.username'|trans }}
                </label>
                <div class="col-xs-12">
                    {{ form_widget(form.username, {'attr': {'class': 'form-control', 'placeholder': 'Username'}}) }}
                </div>
            </div>
            <div class="form-group">
                <label class="control-label" for="fos_user_profile_form_email">
                    {{ 'form.email'|trans }}
                </label>
                <div class="col-xs-12">
                    {{ form_widget(form.email, {'attr': {'class': 'form-control', 'placeholder': 'Email'}}) }}
                </div>
            </div>
            <div class="form-group">
                <label class="control-label" for="fos_user_profile_form_current_password">
                    {{ 'form.current_password'|trans }}
                </label>
                <div class="col-xs-12">
                    {{ form_widget(form.current_password, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>
            <div class="col-xs-12">
                <button type="submit" class="btn btn-primary pull-right">
                    <span class="fa fa-edit icon-left"></span>
                    {{ 'profile.edit.submit'|trans }}
                </button>
            </div>
            {{ form_rest(form) }}
        </form>
    </div>
{% endblock fos_user_content %}